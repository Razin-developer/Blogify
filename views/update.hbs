<div class="container mt-5">
  <h2 class="text-center mb-4">Update Blog</h2>
<form action="/blog/{{blog._id}}/update" method="POST" enctype="multipart/form-data">
  <div class="form-group mt-3">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" aria-describedby="emailHelp" name="title" placeholder="Enter Title" value="{{blog.title}}">
  </div>
  <div class="form-group mt-3">
    <label for="short-descriptionInput">Short Description</label>
    <textarea type="text" class="form-control" id="short-descriptionInput" name="shortDescription" placeholder="Short Description" style="height: 75px;" ></textarea>
  </div>
  <div class="form-group mt-3">
    <label for="descriptionInput">Description</label>
    <textarea type="text" class="form-control" id="descriptionInput" name="description" placeholder="Description" style="height: 200px;" ></textarea>
  </div>
  <div class="form-group mt-3">
    <label for="imageInput">Image</label>
    <img id='img' src="{{blog.imageUrl}}" alt="{{blog.title}}" width="75px" height="75px"></img>
    <input type="file" class="form-control" id="imageInput" name="image" placeholder="Image" onchange="viewImage(event)">
  </div>
  <div class="text-center mt-4">
   <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>
</div>

<script>
  document.getElementById(`short-descriptionInput`).value = `{{blog.shortDescription}}`;
  document.getElementById(`descriptionInput`).value = `{{blog.description}}`;
  function viewImage (event) {
    document.getElementById('img').src = URL.createObjectURL(event.target.files[0])
  }
</script>